<UserControl x:Class="user_client.View.PostDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:user_client.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Grid 정의 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- 상단 -->
            <RowDefinition Height="*" />
            <!-- 본문 -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- 왼쪽 -->
            <ColumnDefinition Width="Auto"/>
            <!-- 오른쪽 -->
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock x:Name="Title"
                   Text="{Binding Title}"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   FontSize="20" 
                   Margin="58,4,0,0"
                   Grid.Row="1" Grid.Column="0"/>

        <!-- 첫 번째 Button: 오른쪽 상단 -->
        <Button Content="👤" 
                Width="30" Height="30" 
                FontSize="18" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top" 
                Margin="0,30,30,0"
                Grid.Row="0" Grid.Column="1"/>
        <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="10,10,0,0"
                Grid.Row="0" Grid.Column="0">
            <Button Content="🏠" Width="40" Height="30" Margin="0,0,10,0" Click="HomeButton_Click"/>
        </StackPanel>
        <!-- 수정과 삭제 버튼: 오른쪽 상단 버튼 아래 -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,12,6,0" 
                    Grid.Row="1">
            <Button Content="수정" 
                    Width="40" Height="30" 
                    FontSize="12"
                    Click="EditButton_Click" />
            <Button Content="삭제" 
                    Margin="5,0,0,0"
                    Width="40" Height="30" 
                    FontSize="12"
                    Click="DeleteButton_Click" />
        </StackPanel>

        <!-- Date: 오른쪽 버튼의 왼쪽 대각선 아래 -->
        <TextBlock x:Name="Date"    
                   Text="{Binding Date}"
                   FontSize="10"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top"  
                   Margin="0,42,8,0"
                   Grid.Row="1"/>

        <!-- Author와 두 번째 Button -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="62,45,0,0"
                    Grid.Row="1" Grid.Column="0">
            <Button Content="👤" 
                    Width="30" Height="30" 
                    FontSize="18" />
            <TextBlock x:Name="Author"
                       Text="{Binding Author}"
                       FontSize="15"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- Body -->
        <TextBlock x:Name="Body"    
                   Text="{Binding Body}"
                   FontSize="15" 
                   VerticalAlignment="Top"  
                   Margin="62,112,0,0"
                   Grid.Row="1" Height="268"/>

    </Grid>
</UserControl>
