<Window x:Class="user_client.View.Chat.UserChattingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:user_client.View.Chat"
        mc:Ignorable="d"
        Background="#e1e1e1"
        Title="UserChattingWindow" Height="670" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="60">
            <TextBlock
                VerticalAlignment="Center"
                Margin="30 10 0 0"
                HorizontalAlignment="Left"
                FontSize="18"
                TextWrapping="NoWrap"
                TextTrimming="CharacterEllipsis"
                Width="200"
                Name="TargetName">상대방</TextBlock>
        </Grid>
        <ScrollViewer Grid.Row="1" Name="ChatScroll">
            <ItemsControl ItemsSource="{Binding ChatLogs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <StackPanel Orientation="Vertical" >

                                <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Right">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMine}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <TextBlock Text="나"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,0,2"/>
                                    <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding CreatedAt}"
                                             Margin="0 0 5 0"
                                             VerticalAlignment="Bottom"/>
                                        <TextBlock Text="{Binding Message}"
                                             Padding="10"
                                             Background="White"
                                             TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Vertical"
                                      HorizontalAlignment="Left">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMine}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <TextBlock Text="{Binding Sender}"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,2"/>
                                    <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Message}"
                                             Padding="10"
                                             Background="#A5C7FF"
                                             TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding CreatedAt}"
                                             Margin="5 0 0 0"
                                             VerticalAlignment="Bottom"/>
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Grid Grid.Row="2">
            <TextBox Name="ChatInput" Width="Auto" Height="150" VerticalAlignment="Bottom"></TextBox>
            <Button Tag="ChatInput" Click="SendBtn_Click" Width="70" FontSize="16" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Background="#A5C7FF" BorderThickness="0">전송</Button>
        </Grid>
    </Grid>
</Window>
