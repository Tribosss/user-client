<UserControl x:Class="user_client.View.OtpControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="OTP 인증" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="6자리 OTP 입력" Margin="0,0,0,5"/>
            <TextBox x:Name="OtpBox" Width="200" Height="25" Margin="0,0,0,10"/>

            <Button Content="인증하기" Width="200" Click="OtpButton_Click"/>

            <TextBlock x:Name="OtpErrorText"
                       Foreground="Red"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"
                       Text="OTP 인증 실패"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>