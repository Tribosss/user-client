<UserControl x:Class="user_client.View.TotpControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Border Background="#FFF" Padding="30" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="OTP 인증" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBox x:Name="OtpBox" Height="40" FontSize="16" Margin="0,0,0,10" 
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     MaxLength="6" />

            <TextBlock x:Name="TimeLeftText" Text="남은 시간: 180초" 
                       HorizontalAlignment="Center" Foreground="Gray" FontSize="12" Margin="0,0,0,10"/>

            <TextBlock x:Name="OtpErrorText" Text="OTP가 올바르지 않습니다." 
                       Foreground="Red" Visibility="Collapsed" FontSize="12" Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <Button x:Name="OtpButton" Content="인증" Height="40" FontSize="16" Margin="0,10,0,0"
                    Click="OtpButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>
