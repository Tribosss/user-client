<UserControl x:Class="user_client.View.CreatePostControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- 상단 버튼 및 콤보박스 -->
            <RowDefinition Height="*" />
            <!-- 콘텐츠 영역 -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- 콘텐츠 영역 -->
            <ColumnDefinition Width="Auto" />
            <!-- 우측 버튼 -->
        </Grid.ColumnDefinitions>

        <!-- 사용자 버튼 -->
        <Button Content="👤" 
                Width="30" Height="30" 
                FontSize="18" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top" 
                Margin="0,30,30,0"
                Grid.Row="0" Grid.Column="1" />

        <!-- 콤보박스 -->
        <ComboBox HorizontalAlignment="Right" 
                  VerticalAlignment="Top" 
                  Width="70"
                  Margin="0,70,30,0"
                  SelectedIndex="0"
                  Grid.Row="0" Grid.Column="1">
            <ComboBoxItem Content="공지" />
            <ComboBoxItem Content="일반" />
        </ComboBox>

        <!-- 메인 콘텐츠 -->
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Text="글 제목" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox x:Name="TitleTextBox" Height="30" Margin="0,0,0,15" />
            <TextBlock Text="내용" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox x:Name="BodyTextBox" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,15" />

            <Button Content="저장" Height="40" Width="80" HorizontalAlignment="Center" Click="SaveButtonClick" />
        </StackPanel>
    </Grid>
</UserControl>
