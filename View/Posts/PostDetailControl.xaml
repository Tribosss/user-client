<UserControl x:Class="user_client.View.PostDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:user_client.View"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1060">

    <Grid Margin="160 0 0 0" Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 제목 + 작성자 + 버튼 -->
        <Grid Grid.Row="0" Margin="30,30,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 제목 -->
            <TextBlock x:Name="Title"
                       Text="{Binding Title}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Black"
                       VerticalAlignment="Top"
                       Margin="10"
                       Background="White"
                       Padding="10"/>

            <!-- 작성자 + 버튼 + 날짜 -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                <!-- 수정/삭제 버튼 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="수정" Width="50" Height="30" Margin="0,0,5,0" Click="EditButton_Click"/>
                    <Button Content="삭제" Width="50" Height="30" Click="DeleteButton_Click"/>
                </StackPanel>

                <!-- 날짜 -->
                <TextBlock x:Name="Date"
                           Text="{Binding Date}"
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Right"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- 작성자 프로필 (제목 아래 왼쪽) -->
            <StackPanel Orientation="Horizontal" Margin="10,60,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <Ellipse Width="40" Height="40" Stroke="Gray" StrokeThickness="1" Margin="0,0,10,0">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding AuthorProfileImage}" />
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel>
                    <TextBlock Text="{Binding Author}" FontWeight="Bold" FontSize="14" Foreground="Black"/>
                    <TextBlock Text="{Binding AuthorPosition}" FontSize="12" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- 본문 -->
        <ScrollViewer Grid.Row="1" Margin="30,20,30,30" VerticalScrollBarVisibility="Auto">
            <Border Background="White" Padding="20">
                <TextBlock x:Name="Body"
                           Text="{Binding Body}"
                           FontSize="15"
                           TextWrapping="Wrap"
                           Foreground="Black"/>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
