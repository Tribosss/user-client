<UserControl x:Class="user_client.View.PostDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1060">

    <Grid Background="white" Margin="160,0,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White"
                    Margin="40,30,40,30"
                    Padding="40"
                    BorderBrush="#BFBFBF"
                    BorderThickness="1"
                    CornerRadius="4">
                <StackPanel>

                    <!-- 게시물 제목 -->
                    <TextBlock Text="{Binding Post.Title}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,20"/>

                    <!-- 작성자 정보 + 버튼 -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 작성자 -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <Ellipse Width="40" Height="40" Stroke="Gray" StrokeThickness="1" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AuthorProfileImage}" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Post.Author}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="{Binding AuthorPosition}" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 날짜 + 버튼 -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="EditButton" Content="수정" Width="50" Height="30" Margin="0,0,5,0" Click="EditButton_Click"/>
                                <Button x:Name="DeleteButton" Content="삭제" Width="50" Height="30" Click="DeleteButton_Click"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Post.Date}" FontSize="12" Foreground="Gray" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- 구분선 -->
                    <Separator Margin="0,0,0,20" Background="#BFBFBF" Height="1"/>

                    <!-- 본문 내용 -->
                    <TextBlock Text="{Binding Post.Body}"
                               FontSize="15"
                               TextWrapping="Wrap"
                               Foreground="Black"
                               LineHeight="24"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
