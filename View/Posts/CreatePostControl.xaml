<UserControl x:Class="user_client.View.CreatePostControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:user_client.View"
             Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- 사이드메뉴 -->
            <ColumnDefinition Width="*"/>
            <!-- 작성 영역 -->
        </Grid.ColumnDefinitions>

        <!-- 사이드메뉴 -->
        <local:SideMenuControl Grid.Column="0"/>
        <local:SideMenuControl x:Name="SideMenu" />

        <!-- 작성 영역 -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 사용자 버튼 -->
            <Button Content="👤" 
                    Width="30" Height="30" 
                    FontSize="18" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top" 
                    Margin="0,30,30,0"
                    Grid.Row="0" Grid.Column="1" />

            <!-- 콤보박스 -->
            <ComboBox x:Name="TypeComboBox"
                      HorizontalAlignment="Right" 
                      VerticalAlignment="Top" 
                      Width="70"
                      Margin="0,70,30,0"
                      SelectedIndex="0"
                      Grid.Row="0" Grid.Column="1">
                <ComboBoxItem Content="NOTICE" />
                <ComboBoxItem Content="NORMAL" />
            </ComboBox>

            <!-- 메인 콘텐츠 -->
            <StackPanel Grid.Row="1" Grid.Column="0">
                <TextBlock Text="글 제목" FontWeight="Bold" Margin="0,0,0,5" />
                <TextBox x:Name="TitleTextBox" Height="30" Margin="0,0,0,15" />
                <TextBlock Text="내용" FontWeight="Bold" Margin="0,0,0,5" />
                <TextBox x:Name="BodyTextBox" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,15" />

                <Button Content="저장" Height="40" Width="80" HorizontalAlignment="Center" Click="SaveButton_Click" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Margin="10,10,0,0"
                        Grid.Row="0" Grid.Column="0">
                <Button Content="🏠" Width="40" Height="30" Margin="0,0,10,0" Click="HomeButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
