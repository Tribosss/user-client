<UserControl x:Class="user_client.Components.SideBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:user_client.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="160" VerticalAlignment="Center" HorizontalAlignment="Left">
    <Border BorderBrush="#A4A4A4" x:Name="SideBarBorder"
        BorderThickness="0 0 2 0" VerticalAlignment="Center" >
        <Grid Background="#D9D9D9" Height="600" Width="160">
            <Image Source="/Src/Icon/TribossLogo.png" Width="130" Height="130" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>

            <Grid Width="Auto" Height="100" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 130 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Click="BoardNav_Click" Background="#D9D9D9" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="/Src/Icon/BoardIcon.png" Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" >게시판</TextBlock>
                    </Grid>
                </Button>
                <Button Grid.Row="1" Click="ChattingNav_Click" Background="#D9D9D9" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/Src/Icon/ChatIcon.png" Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" >채팅</TextBlock>
                    </Grid>
                </Button>
                <Button Grid.Row="2" Click="PolicyRequestNav_Click" Background="#D9D9D9" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Margin="-3 0 0 0" Source="/Src/Icon/PolicyRequestIcon.png" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" >권한 요청</TextBlock>
                    </Grid>
                </Button>
            </Grid>


            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0 0 0 60">
                <Image Source="/Src/Icon/Profile.png"  Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Margin="6 5 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Name="EmpId" FontSize="11">사번:</TextBlock>
                    <TextBlock Margin="6 5 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Name="Position"  FontSize="11">직급: 관리자</TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
