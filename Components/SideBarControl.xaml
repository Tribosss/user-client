<UserControl x:Class="user_client.Components.SideBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:user_client.Components"
             mc:Ignorable="d" 
             d:DesignWidth="160"
             Width="160"
             HorizontalAlignment="Left"
             VerticalAlignment="Stretch">
    <!-- 창 세로에 맞춤 -->

    <Border BorderBrush="#A4A4A4" x:Name="SideBarBorder"
            BorderThickness="0 0 2 0"
            VerticalAlignment="Stretch">
        <!-- 세로로 확장 -->

        <Grid Background="#D9D9D9"
              Width="160"
              VerticalAlignment="Stretch">
            <!-- Grid도 세로로 늘어남 -->

            <!-- 로고 -->
            <Image Source="/Src/Icon/TribossLogo.png"
                   Width="130" Height="130"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"/>

            <!-- 버튼 영역 -->
            <Grid Width="Auto" Height="100"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  Margin="0 130 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 게시판 버튼 -->
                <Button Grid.Row="0" Click="BoardNav_Click" Background="#D9D9D9" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/Src/Icon/BoardIcon.png" Width="25" Height="25"/>
                        <TextBlock Grid.Column="1" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center">게시판</TextBlock>
                    </Grid>
                </Button>

                <!-- 채팅 버튼 -->
                <Button Grid.Row="1" Click="ChattingNav_Click" Background="#D9D9D9" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/Src/Icon/ChatIcon.png" Width="25" Height="25"/>
                        <TextBlock Grid.Column="1" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center">채팅</TextBlock>
                    </Grid>
                </Button>

                <!-- 권한 요청 버튼 -->
                <Button Grid.Row="2" Click="PolicyRequestNav_Click" Background="#D9D9D9" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Margin="-3 0 0 0" Source="/Src/Icon/PolicyRequestIcon.png" Width="30" Height="30"/>
                        <TextBlock Grid.Column="1" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center">권한 요청</TextBlock>
                    </Grid>
                </Button>
            </Grid>

            <!-- 사용자 정보 -->
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        Margin="0 0 0 60">
                <Image Source="/Src/Icon/Profile.png" Width="30" Height="30"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="6 5 0 0" FontSize="11" Name="EmpId">사번:</TextBlock>
                    <TextBlock Margin="6 5 0 0" FontSize="11" Name="Position">직급: 관리자</TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
